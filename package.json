{
  	"name": "swifttestfilegen",
	"displayName": "SwiftTestFileGen",
	"description": "Generates test files from Swift Package Manager target files",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/Package.swift"
	],
	"repository": "https://github.com/LuizZak/SwiftTestFileGen",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "swifttestfilegen.generateTestFiles",
				"title": "Generate Test File(s)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "swifttestfilegen.generateTestFiles",
					"when": "resourceExtname == .swift || explorerResourceIsFolder"
				}
			]
		},
		"configuration": {
			"title": "SwiftTestFileGen",
			"properties": {
				"swifttestfilegen.fileGen.skipConfirm": {
					"type": "boolean",
					"default": false,
					"description": "Whether to skip confirmation while creating files, and applying changes immediately after invoking the file generation command."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}
